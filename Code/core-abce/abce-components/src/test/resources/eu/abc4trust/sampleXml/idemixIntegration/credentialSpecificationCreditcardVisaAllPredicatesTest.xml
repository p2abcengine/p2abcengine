<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

	<!--
		This is a sample ABC4Trust credential specification for a credit card
	-->

<abc:CredentialSpecification xmlns:abc="http://abc4trust.eu/wp2/abcschemav1.0" Version="Version 1.0" KeyBinding="true" Revocable="false"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://abc4trust.eu/wp2/abcschemav1.0 ../../../../../../../../abc4trust-xml/src/main/resources/xsd/schema.xsd">
    <abc:SpecificationUID>http://visa.com/creditcard/specification</abc:SpecificationUID>
    <abc:FriendlyCredentialName lang="en">Visa Card</abc:FriendlyCredentialName>
     <abc:AttributeDescriptions MaxLength="53">
        <abc:AttributeDescription Type="CardStatus" DataType="xs:anyURI" Encoding="urn:abc4trust:1.0:encoding:anyUri:sha-256">
      	<abc:FriendlyAttributeName lang="en">Card Status</abc:FriendlyAttributeName>
      	</abc:AttributeDescription>
        <abc:AttributeDescription Type="CardType" DataType="xs:string" Encoding="urn:abc4trust:1.0:encoding:string:sha-256">
      	<abc:FriendlyAttributeName lang="en">Card Type</abc:FriendlyAttributeName>
      	</abc:AttributeDescription>
        <abc:AttributeDescription Type="SecurityCode" DataType="xs:integer" Encoding="urn:abc4trust:1.0:encoding:integer:signed">
      		<abc:FriendlyAttributeName lang="en">Security Code</abc:FriendlyAttributeName>
        </abc:AttributeDescription>
        <abc:AttributeDescription Type="Expires" DataType="xs:date" Encoding="urn:abc4trust:1.0:encoding:date:unix:signed">
        	<abc:FriendlyAttributeName lang="en">Expiration Date</abc:FriendlyAttributeName>
        </abc:AttributeDescription>
        <abc:AttributeDescription Type="CardNumber" DataType="xs:string" Encoding="urn:abc4trust:1.0:encoding:string:sha-256">
      		<abc:FriendlyAttributeName lang="en">Card Number</abc:FriendlyAttributeName>
      	</abc:AttributeDescription>
      	<abc:AttributeDescription Type="CardOwner" DataType="xs:string" Encoding="urn:abc4trust:1.0:encoding:string:sha-256">
      		<abc:FriendlyAttributeName lang="en">Card Owner</abc:FriendlyAttributeName>
      	</abc:AttributeDescription>
      	<abc:AttributeDescription Type="CardOwner2" DataType="xs:string" Encoding="urn:abc4trust:1.0:encoding:string:sha-256">
      		<abc:FriendlyAttributeName lang="en">Card Owner 2</abc:FriendlyAttributeName>
      	</abc:AttributeDescription>
      	<abc:AttributeDescription Type="Electron" DataType="xs:boolean" Encoding="urn:abc4trust:1.0:encoding:boolean:unsigned">
      		<abc:FriendlyAttributeName lang="en">Electron Flag</abc:FriendlyAttributeName>
      	</abc:AttributeDescription>
    </abc:AttributeDescriptions>
</abc:CredentialSpecification>