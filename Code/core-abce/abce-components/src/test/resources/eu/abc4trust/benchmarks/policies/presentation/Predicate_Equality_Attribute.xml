<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<!-- 
  This is the ABC4Trust presentation policy for the School Registration System 
-->
<abc:PresentationPolicyAlternatives xmlns:abc="http://abc4trust.eu/wp2/abcschemav1.0"  Version="1.0"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://abc4trust.eu/wp2/abcschemav1.0 ../../../../../../../../abc4trust-xml/src/main/resources/xsd/schema.xsd">
    
    <abc:PresentationPolicy PolicyUID="uri:presentationTest:2Credentials">
        <abc:Message>
            <abc:FriendlyPolicyName lang="en">Policy: Authorized Users only</abc:FriendlyPolicyName>
            <abc:FriendlyPolicyDescription lang="en">This policy will request the two credentials</abc:FriendlyPolicyDescription>
        </abc:Message>
        
        <abc:Credential Alias="#credSchool" >
           <abc:CredentialSpecAlternatives>
	          <abc:CredentialSpecUID>urn:soderhamn:credspec:credSchool</abc:CredentialSpecUID>
	       </abc:CredentialSpecAlternatives>
	      
	       <abc:IssuerAlternatives>
        	 <abc:IssuerParametersUID>urn:soderhamn:issuer:credSchool</abc:IssuerParametersUID>
      	   </abc:IssuerAlternatives>
      	   
      	 </abc:Credential> 
      	 
      	 <abc:Credential Alias="#credSchool2" >
           <abc:CredentialSpecAlternatives>
	          <abc:CredentialSpecUID>urn:soderhamn:credspec:credSchool12Atts</abc:CredentialSpecUID>
	       </abc:CredentialSpecAlternatives>
	      
	       <abc:IssuerAlternatives>
        	 <abc:IssuerParametersUID>urn:soderhamn:issuer:credSchool12Atts</abc:IssuerParametersUID>
      	   </abc:IssuerAlternatives>
      	   
      	 </abc:Credential> 
      	 
      	<abc:AttributePredicate Function="urn:oasis:names:tc:xacml:1.0:function:string-equal">
      		<abc:Attribute CredentialAlias="#credSchool" AttributeType="urn:soderhamn:credspec:credSchool:lastname"/>
      		<abc:Attribute CredentialAlias="#credSchool2" AttributeType="urn:soderhamn:credspec:credSchool12Atts:lastname"/>

    	 </abc:AttributePredicate>   
    </abc:PresentationPolicy>
   </abc:PresentationPolicyAlternatives>
   
   
 
 