<Window x:Class="ABC4TrustSmartCardUI.SetVirginMode"
        xmlns:prop="clr-namespace:ABC4TrustSmartCardUI.Properties"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SetVirginMode" Height="300" Width="300">
    <Grid>
        <TextBox Height="58" HorizontalAlignment="Left" Text="{x:Static prop:Resources.virginMode}" Margin="33,32,0,0" Name="virginWarning" VerticalAlignment="Top" Width="207" TextWrapping="Wrap" FontWeight="Bold" />
        <Button Content="Set Virgin Mode" HorizontalAlignment="Left" Margin="86,160,0,0" Name="setVirginMode" VerticalAlignment="Top" Click="virginMode_Click" />
    </Grid>
</Window>
